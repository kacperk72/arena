<div class="bg-image d-flex align-items-center "
     style="background-image: url('/img/create warrior final.jpg'); height: 100vh; background-repeat: no-repeat; background-size: cover;">
    <div id="header-space"></div>
    <div class="main" >
        <form action="/warrior" method="POST" >
            <h2>Zarejestruj wojownika</h2>
            <label>
                Imię: <br>
                <input type="text" name="name" minlength="3" maxlength="50"><br>
            </label>
            <label>
                Siła: <br>
                <input type="number" name="power" value="1" min="1" max="10"><br>
            </label>
            <label>
                Obrona: <br>
                <input type="number" name="defence" value="1" min="1" max="10"><br>
            </label>
            <label>
                Wytrzymałość: <br>
                <input type="number" name="stamina" value="1" min="1" max="10"><br>
            </label>
            <label>
                Zwinność: <br>
                <input type="number" name="agility" value="1" min="1" max="10"><br>
            </label>
            <button type="submit">Zarejestruj</button>
        </form>
    </div>

</div>
